			var bet = document.getElementById("CurrentBet").value;
			//console.log("player needs to get his money back");
			socket.emit('payout', bet);
		}
		async function push(){
			var bet = document.getElementById("CurrentBet").value;
			bet = bet/2;
			//console.log("push player");
			socket.emit('payout',bet);
		}
		async function blackjackPayout(){
			var bet = document.getElementById("CurrentBet").value;
			bet = bet/2;
			//console.log("push player");
			socket.emit('blackjackPay',bet);
		}

