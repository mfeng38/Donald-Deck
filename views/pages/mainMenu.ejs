<!DOCTYPE html>
<html>
  <head>
    <title> Donald Deck - Main Menu </title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
  </head>
  <body>
    <% rows.forEach((r) => { %>
    <div class="container-fluid">
        <div class="row">
          <div class="col-sm">
          </div>
          <div class="col-sm">
                <h1 class="text-center"> Hello, <%=r.username %>! </h1>
                <form method='POST' action='/myStats/'>
                    <input type="hidden" name="id" value=<%= r.username %>>
                    <input type="submit" class="btn btn-primary btn-lg btn-block" value="View Stats"/>
                </form>
                <br>
                <form method='POST' action='/soloBlackjack/'>
                    <input type="hidden" name="id" value=<%= r.username %>>
                    <input type="submit" class="btn btn-success btn-lg btn-block" value="Play Solo"/>
                </form>
                <br>
                <form method='POST' action='/multiplayerBlackjack/'>
                    <input type="hidden" name="id" value=<%= r.username %>>
                    <input type="submit" class="btn btn-success btn-lg btn-block" value="Create Match"/>
                </form>
                <br>
                <form method='POST' action='/joinMatch/'>
                    <input type="hidden" name="id" value=<%= r.username %>>
                    <input type="submit" class="btn btn-success btn-lg btn-block" value="Join Match"/>
                </form>
                <br>
                <form method='GET' action='/'>
                    <input type="hidden" name="id" value=<%= r.username %>>
                    <input type="submit" class="btn btn-danger btn-lg btn-block" value="Logout"/>
                </form>
          </div>
          <div class="col-sm">
          </div>
        </div>
    </div>
    <% }); %>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>
